/**index.wxss**/
.nav-wrapper{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 90rpx;
  z-index: 99;
  
}
.nav-item{
  width: 120rpx;
  flex-shrink: 0;
  text-align: center;
  vertical-align: middle;
  color: #fff;
  background-color: #8DCBE1;
  font-size:35rpx;
  line-height: 80rpx;
  border: 8rpx solid #8DCBE1;
}
.isSelected{
  border-bottom: 8rpx solid #5DBACB;
}
.news-wrapper{
  background: #fff;
  margin:20rpx;
  width: 95%;
}
.newsPic{
  width: 685rpx;
  height: 400rpx;
  margin-left: 15rpx;
  margin-top:15rpx;
}
.news-list{
  display: flex;
  flex-direction: column;
}
.news-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding:15rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1)
}
.newsPic-sm{
  width: 172rpx;
  height: 120rpx;
}
.item-left{
  margin-right: 15rpx;
}
.news-detail{
  font-size: 25rpx;
  opacity: 0.5;
}


